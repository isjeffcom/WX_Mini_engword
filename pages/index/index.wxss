.home_res_card .addBtn text{
  display: flex;
  position: relative;
  font-size: 18px;
  color: #fff;
  height: 88rpx;
  align-items: center;
  justify-content: center;
}

.addBtn .addBtn_inner{
  width: 36%;
  position: relative;
  margin: 0 auto;
}

.home_res_card .addBtn text:nth-child(1) {
  float: left;
  font-size: 30px;
}
.newWord{
  margin-left: 5%;
  margin-right: 5%;
  margin-bottom:50rpx;
}
.newWord .title{
  display: block;
  margin-top: 44rpx;
  font-size: 14px;
  color: #000;
  font-weight: 400;
}

.newWord .wordListCard{
  margin-top: 10rpx;
}
.newWord .wordListCard .card{
  box-shadow: 0px 2px 4px #D1D1D1;
  padding:18rpx 23rpx 8rpx 23rpx;
  height: 36px;
  overflow: hidden;
  margin-top:20px;
}
.takeBack{
    animation: takeBack 1s forwards;
    animation-timing-function: ease;
}
.packup{
    animation: packup 1s forwards;
    animation-timing-function: ease;
}

.rotate {
   animation: rotate 800ms forwards;
   animation-timing-function: ease;
}
.rotateback {
    animation: rotateback 800ms forwards;
   animation-timing-function: ease; 
}
/* .arrow{
    transform:rotate(270deg);
} */

@keyframes rotate {
    from {
      transform:rotate(0deg);
  }
   to {
      transform:rotate(90deg);
  }
}

@keyframes rotateback {
    from {
      transform:rotate(90deg);
  }
   to {
      transform:rotate(0deg);
  }
}

@keyframes packup {
    from {
      height:36px;
      overflow: hidden;
  }
   to {
      height: auto;
      overflow: none;
  }
}

@keyframes takeBack {
    from {
    height:auto;
    overflow: none; 
  }
   to {
    height: 36px;
    overflow: none;
  }
}

.wordListCard .card_Top{
  display:flex;
  height: 30px;
  position: relative;
}
.wordListCard .card_TopLeft{
  display:flex;
  float: left;
}
.wordListCard .card_TopLeft text:nth-child(1){
